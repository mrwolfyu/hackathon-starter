extends ../layout

block content
  .page-header
    h3 Create new room / meeting
  form.form-horizontal(id='createroom-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='name') Meeting Name
      .col-sm-7
        input.form-control(type='text', name='name', id='name', placeholder='Name', autofocus, required)
    .form-group
      label.col-sm-3.control-label(for='meetingID') MeetingID
      .col-sm-7
        input.form-control(type='text', name='meetingID', id='meetingID',  placeholder='meetingID', required)
    .form-group
      label.col-sm-3.control-label(for='recordID') RecordID
      .col-sm-7
        input.form-control(type='text', name='recordID', id='recordID',  placeholder='recordID', required)
    .form-group
      label.col-sm-3.control-label(for='attendeePW') AttendeePW
      .col-sm-7
        input.form-control(type='text', name='attendeePW', id='attendeePW',  placeholder='attendeePW', value='', required)
    .form-group
      label.col-sm-3.control-label(for='moderatorPW') ModeratorPW
      .col-sm-7
        input.form-control(type='text', name='moderatorPW', id='moderatorPW',  placeholder='moderatorPW', value='', required)
    .form-group
      label.col-sm-3.control-label(for='fullName') Full Name
      .col-sm-7
        input.form-control(type='text', name='fullName', id='fullName',  placeholder='fullName', required)
    .form-group
      label.col-sm-3.control-label(for='author') Author
      .col-sm-7
        input.form-control(type='text', name='author', id='author',  placeholder='author', value='')
    .form-group
      label.col-sm-3.control-label(for='tip') Record
      .col-sm-6
        label.checkbox.col-sm-4
          input(type='checkbox',checked=true, name='record', value='record', id='record')
          span record
        label.checkbox.col-sm-4
          input(type='checkbox', checked=true, name='autoStartRecording', value='autoStartRecording', id='autoStartRecording')
          span autoStartRecording
        label.checkbox.col-sm-4
          input(type='checkbox', name='allowStartStopRecording', value='allowStartStopRecording', id='allowStartStopRecording')
          span allowStartStopRecording
        label.checkbox.col-sm-4
          input(type='checkbox', checked=true, name='publish', value='publish', id='publish')
          span publish
    .form-group
      label.col-sm-3.control-label(for='welcome') Welcome message
      .col-sm-7
        textarea.form-control(type='text', name='welcome', id='welcome', rows='12',  placeholder='Custom Welcome message if aplicable')
    .form-group
      label.col-sm-3.control-label(for='xml') Custom XML
      .col-sm-7
        textarea.form-control(type='text', name='xml', id='xml', rows='12',  placeholder='Custom XML if aplicable')
    .form-group
      .col-sm-offset-3.col-sm-7
        button.btn.btn-success(type='submit')
          i.fa.fa-plus
          | Create

