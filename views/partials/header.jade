.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-cube
        | MeteoBB
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if !user
          li(class=(title == 'Home') ? 'active' : undefined)
            a(href='/') Home
        else
          if admin=='admin'
            li(class=(title == 'Admin') ? 'active' : undefined)
              a(href='/admin') Admin
            li(class=(title == 'Create Account') ? 'active' : undefined)
              a(href='/signup') Create Account
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            if admin=='admin'
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | #{user.profile.name || user.email || user.id}&nbsp;
                i.caret
                ul.dropdown-menu
                  li
                    a(href='/account') My Account
                  li.divider
                  li
                    a(href='/logout') Logout
            else
              li(class=(title ==  (user.profile.name || user.email || user.id) ) ? 'active' : undefined)
                 a(href='/') #{user.profile.name || user.email || user.id}
              li(class=(title == 'Logout') ? 'active' : undefined)
                 a(href='/logout') Logout
