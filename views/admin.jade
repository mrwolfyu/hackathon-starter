extends layout

block content
  h1 Meteo Briefing Box
  h2 #{LOCATION}
  hr
  .row
    .col-sm-6
      h2 Accounts
      p
        table.table.table-hover.table-bordered
           thead
             tr
               th Username/Name
               th Type
               th Action
           each user, i in users  
             tr
               td #{user.username} / #{user.profile.name}
               td #{user.profile.tip}
               td
                 a.i.fa.fa-pencil(href='/account/#{user._id}')
      .form-group
          a.button.btn.btn-primary(href='/signup')
            i.fa.fa-plus
            | Add User

    .col-sm-6
      h2 Rooms
      p
        table.table.table-hover.table-bordered
           thead
             tr
               th Meeting Id
               th Meeting name
               th Action
           each room, i in rooms
             tr
               td #{room.meetingID}
               td #{room.name}
               td
                 a.i.fa.fa-pencil(href='/roomc/#{room._id}') Edit
                 a.i.fa.fa-plus(href='/admin/create') Create
                 a.i.fa.fa-check(href='/admin/join') Join
      .form-group
          a.button.btn.btn-primary(href='/roomc')
            i.fa.fa-plus
            | Add Meetting
   .row 
    .col-sm-6
      h2 Users
      table(data-toggle="table" data-url='/api/admin/getusers')
        thead
          tr
            th(data-field='username') Username
            th(data-field='profile.name') Fullname
            th(data-field='profile.tip') Type
